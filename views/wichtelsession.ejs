<%- include('partials/header') %>

    <div class="center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title d-flex justify-content-center">Wichtel HR Office</h5>
                <form action="/wichtelsession" method="POST">
                    <div class="form-group mb-1">
                        <label>Gruppenname</label>
                        <input type="text" class="form-control" name="gruppenName" value="<%= gruppenName %>" readonly>
                    </div>
                    <div class="form-group mb-1">
                        <label>Name des Events</label>
                        <input type="text" class="form-control" name="wichtelsessionName">
                    </div>
                    <div class="form-group mb-1">
                        <label>Gruppenverwalter</label>
                        <input type="text" class="form-control" name="owner" id="owner" value="<%= ownerName %>"
                            readonly>
                    </div>
                    <div class="form-group mb-1">
                        <label>Teilnehmer</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Name" aria-label="Name"
                                aria-describedby="button-addon2" id="recName">
                            <input type="text" class="form-control" placeholder="Email" aria-label="Email"
                                aria-describedby="button-addon2" id="recMail">
                            <button class="btn btn-outline-success" type="button" onclick="addRecip()">Add</button>
                        </div>
                    </div>
                    <input type="hidden" name="recipients" id="recipients">
                    <ul id="list">
                        <li><%= ownerName %></li>
                    </ul>
            </div>

            <div class="d-flex justify-content-center mb-3">
                <button type="submit" class="btn btn-outline-success">Wichtel Event
                    erstellen</button>
            </div>
            </form>
        </div>
    </div>
    </div>







    </div>

    <script>
        var recips = [];
        function addRecip() {
            console.log("addRecip");

            recips.push({
                name: document.getElementById("recName").value,
                email: document.getElementById("recMail").value
            })
            console.log(recips.length);
            var ul = document.getElementById("list");
            var li = document.createElement("li");
            li.appendChild(document.createTextNode(document.getElementById("recName").value));
            ul.appendChild(li);

            document.getElementById("recName").value = '';
            document.getElementById("recMail").value = '';
            console.log(recips);
            document.getElementById("recipients").value = JSON.stringify(recips);
        }
    </script>


    <%- include('partials/footer') %>