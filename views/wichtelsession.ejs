<%- include('partials/header') %>

    <div class="center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Wichtel HR Office</h5>
                <form action="/wichtelHRoffice" method="POST">
                    <div class="form-group mb-1">
                        <label for="gruppenName">Gruppenname</label>
                        <input type="text" class="form-control" name="gruppenName"
                            value="<%= (!!locals.gruppenName)?gruppenName:'' %>" readonly>
                    </div>
                    <div class="form-group mb-2">
                        <label for="wichtelsessionName">Name des Events</label>
                        <input type="text" class="form-control" name="wichtelsessionName"
                            value="<%= (!!locals.wichtelsessionName)?wichtelsessionName:'' %>">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-outline-success">Wichtel Event erstellen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <%- include('partials/footer') %>